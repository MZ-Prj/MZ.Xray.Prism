<Window x:Class="MZ.Splash.Views.SplashWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gif="clr-namespace:WpfAnimatedGif;assembly=WpfAnimatedGif"
        xmlns:prism="http://prismlibrary.com/"            
        xmlns:viewmodels="clr-namespace:MZ.Splash.ViewModels" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        d:DataContext="{d:DesignInstance Type=viewmodels:SplashWindowViewModel}"
        mc:Ignorable="d"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="SplashScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        Width="360"
        Height="400">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" 
               gif:ImageBehavior.AnimatedSource="pack://application:,,,/MZ.Resource;component/Assets/Images/loading.gif" 
               Stretch="None"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"/>

        <Grid Grid.Row="1">
            <ProgressBar Value="{Binding Path=Step}"
                         Minimum="0"
                         Maximum="{Binding Path=MaxStep}"/>
            <Label Content="{Binding Path=Message}"/>
        </Grid>

    </Grid>
</Window>
