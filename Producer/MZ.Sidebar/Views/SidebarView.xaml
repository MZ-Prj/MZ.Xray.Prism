<UserControl x:Class="MZ.Sidebar.Views.SidebarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:MZ.Resource.Converters;assembly=MZ.Resource"
             xmlns:prism="http://prismlibrary.com/" 
             xmlns:viewmodels="clr-namespace:MZ.Sidebar.ViewModels" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d:DataContext="{d:DesignInstance Type=viewmodels:SidebarViewModel}"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <UserControl.Resources>
        <converters:VisibilityConverter x:Key="VisibilityConverter"/>
        <converters:LastestDirectoryConverter x:Key="LastestDirectoryConverter"/>
    </UserControl.Resources>

    <Grid Background="{DynamicResource MahApps.Brushes.Gray10}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" 
                HorizontalAlignment="Left"
                Command="{Binding ToggleExpandCommand}"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
            <iconPacks:PackIconMaterial Kind="Menu" Width="20" Height="20" Margin="2,4"/>
        </Button>

        <ListBox Grid.Row="1" 
                 ItemsSource="{Binding Path=Menus}"
                 SelectedItem="{Binding Path=SelectedMenu}" 
                 Background="{DynamicResource MahApps.Brushes.Gray10}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" >
                        <iconPacks:PackIconMaterial Kind="{Binding Path=IconKind}" Width="20" Height="20" Margin="8"/>
                        <TextBlock Text="{Binding Path=Title, Converter={StaticResource LastestDirectoryConverter}}" 
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   FontWeight="Light"
                                   Margin="8"
                                   Visibility="{Binding Path=DataContext.IsExpand, RelativeSource={RelativeSource AncestorType=ListBox}, Converter={StaticResource VisibilityConverter}}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
