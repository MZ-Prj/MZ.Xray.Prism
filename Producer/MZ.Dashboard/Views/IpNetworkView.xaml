<UserControl x:Class="MZ.Dashboard.Views.IpNetworkView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             xmlns:converters="clr-namespace:MZ.Resource.Converters;assembly=MZ.Resource"
             xmlns:managers="clr-namespace:MZ.Resource.Managers;assembly=MZ.Resource"
             xmlns:viewmodels="clr-namespace:MZ.Dashboard.ViewModels" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d:DataContext="{d:DesignInstance Type=viewmodels:IpNetworkViewModel}"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             prism:ViewModelLocator.AutoWireViewModel="True"
             MinWidth="160">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MZ.Resource;component/Styles/EditorTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <managers:EditorTemplateManager x:Key="EditorSelector"
                                            StringTemplate="{StaticResource StringEditorTemplate}"
                                            Int32Template="{StaticResource Int32EditorTemplate}"
                                            DoubleTemplate="{StaticResource DoubleEditorTemplate}"
                                            BoolTemplate="{StaticResource BoolEditorTemplate}" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="8">
        <ItemsControl ItemsSource="{Binding Path=PropertyItems}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="7*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" 
                               Margin="4" 
                               Content="{Binding Path=Name}"/>

                        <ContentControl Grid.Column="1"
                                        Content="{Binding Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        ContentTemplateSelector="{StaticResource EditorSelector}" />
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
