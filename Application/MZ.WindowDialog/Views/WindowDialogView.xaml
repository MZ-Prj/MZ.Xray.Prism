<mah:MetroWindow  x:Class="MZ.WindowDialog.Views.WindowDialogView"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                  xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                  xmlns:prism="http://prismlibrary.com/"             
                  xmlns:loading="clr-namespace:MZ.Loading.Views;assembly=MZ.Loading" 
                  xmlns:viewmodels="clr-namespace:MZ.WindowDialog.ViewModels" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  d:DataContext="{d:DesignInstance Type=viewmodels:WindowDialogViewModel}"
                  mc:Ignorable="d"
                  prism:ViewModelLocator.AutoWireViewModel="True"
                  Title="{Binding Path=Title}">
    <Grid>
        <ContentControl prism:RegionManager.RegionName="{Binding Path=RegionName}" />
        <loading:LoadingView DataContext="{Binding Path=LoadingModel}"/>
    </Grid>
</mah:MetroWindow>
